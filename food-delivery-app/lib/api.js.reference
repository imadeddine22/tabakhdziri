// Get all dishes from local data
export const getDishes = async () => {
    try {
        const response = await fetch('/data/dishes.json');
        const data = await response.json();
        return data;
    } catch (error) {
        console.error('Error fetching dishes:', error);
        return [];
    }
};

// Get all categories from local data
export const getCategories = async () => {
    try {
        const response = await fetch('/data/categories.json');
        const data = await response.json();
        return data;
    } catch (error) {
        console.error('Error fetching categories:', error);
        return [];
    }
};

// Get a single dish/restaurant by ID from local data
export const getRestaurant = async (id) => {
    try {
        const response = await fetch('/data/dishes.json');
        const data = await response.json();
        // Find the dish with the matching ID
        const dish = data.find(d => d.id === id);
        return dish || null;
    } catch (error) {
        console.error('Error fetching restaurant:', error);
        return null;
    }
};

