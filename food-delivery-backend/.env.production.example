# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration
# Option 1: Local MongoDB
MONGODB_URI=mongodb://localhost:27017/tabakh-dziri

# Option 2: MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tabakh-dziri?retryWrites=true&w=majority

# JWT Secret (CHANGE THIS!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-random-string

# Frontend URL
FRONTEND_URL=https://tabakhdziri.com

# CORS Origins (comma separated)
CORS_ORIGINS=https://tabakhdziri.com,https://www.tabakhdziri.com

# Email Configuration (for contact form, order notifications, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Instagram API (if using Instagram integration)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-change-this

# Admin Default Credentials (for first setup only)
ADMIN_EMAIL=admin@tabakhdziri.com
ADMIN_PASSWORD=ChangeThisPassword123!
